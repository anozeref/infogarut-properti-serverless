{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    }
  ],
  "functions": {
    "api/upload.js": {
      "memory": 1024,
      "maxDuration": 60
    },
    "api/media/cleanup.js": {
      "maxDuration": 60
    }
  },
  "routes": [
    { "src": "^/api/(.*)", "dest": "/api/$1" },
    { "src": "^(?!/api/).*", "dest": "/index.html" }
  ]
}